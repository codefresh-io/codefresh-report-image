
{
  "use" : "yarn run release-it --ci # publish to github ",
  "npm": false,
  "git": {
    "push": false,
    "requireBranch": "main",
    "publish": false
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN",
    "preRelease": true,
    "draft": false
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
