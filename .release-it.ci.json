{
  "use" : "release-it --patch --ci # bump the package and service.yaml",
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "bump: v${version}"
  },
  "hooks": {
    "before:init": ["echo init"],
    "after:bump": "echo 'afterbump';.deploy/pipelines/scripts/ci/name-version.sh > ./service.yaml"
  }
}
